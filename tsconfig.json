{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["@types/node"]
  },
  "extends": "./.nuxt/tsconfig.json",
  "exclude": ["node_modules", ".nuxt", "dist"]
}
